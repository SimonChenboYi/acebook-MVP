<% @posts.each do |post| %>
  <h2><%= post.message %></h2>
  <p>Created at: <%= post.created_at.strftime('%R %d-%m-%Y') %></p>
  <p><% if post.created_at != post.updated_at %>
    Updated at: <%= post.updated_at.strftime('%R %d-%m-%Y') %>
    <% end %>
  <%= link_to "delete", post, method: :delete,
    data: { confirm: "You sure?" } %>
    <%= link_to "edit", edit_post_path(post) %>
<% end %>
<br/>
<br/>
<%= link_to new_post_path do %>
  New post
<% end %>
