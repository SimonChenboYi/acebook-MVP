</center>

<%= form_for(@user) do |form| %><div style="background-color: rgba(255, 255, 255, 0.4); border-radius: 10px; padding: 10px; margin: 20px; width: 450px;">
<h3>Sign-Up! or...<%= link_to "Sign-In", posts_path%></h3><br>
 <%= form.text_field :name, class: 'textbox-style', :required => true, :placeholder => 'Type your name' %>
<br>
<br>
 <%= form.text_field :email, class: 'textbox-style', :required => true, :placeholder => 'Type your email', :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
<br>
<br>
 <%= form.password_field :password, class: 'textbox-style', :placeholder => 'Type your password', :required => true %>
<br>
<br>
 <%= form.submit "Submit", class: 'button' %></div>
<% end %>
